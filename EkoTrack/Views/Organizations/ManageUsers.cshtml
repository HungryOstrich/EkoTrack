@model EkoTrack.Models.OrganizationUser

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users for @Model.OrganizationName</h2>
<hr />

<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card">
            <div class="card-header">
                Add User to Organization
            </div>
            <div class="card-body">
                <form asp-action="AddUser" method="post" class="form-inline">
                    <input type="hidden" name="organizationId" value="@Model.OrganizationId" />

                    <div class="form-group mr-2">
                        <label class="mr-2">Select User:</label>
                        @if (Model.AvailableUsers.Any())
                        {
                            <select name="selectedUserId" asp-items="Model.AvailableUsers" class="form-control">
                                <option value="">-- Select User --</option>
                            </select>
                            <button type="submit" class="btn btn-success ml-2">Add User</button>
                        }
                        else
                        {
                            <span class="text-muted">All registered users are already in this organization.</span>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <h4>Current Members</h4>
        @if (Model.CurrentUsers.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Email / Username</th>
                        <th>Joined Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.CurrentUsers)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.CreatedAt.ToShortDateString()</td>
                            <td>
                                <form asp-action="RemoveUser" method="post" onsubmit="return confirm('Are you sure you want to remove this user?');">
                                    <input type="hidden" name="organizationId" value="@Model.OrganizationId" />
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No users assigned to this organization yet.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>