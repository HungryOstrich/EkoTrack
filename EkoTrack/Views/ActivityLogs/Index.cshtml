@model IEnumerable<EkoTrack.DTOs.ActivityLogDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Activity Log</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new entry</a>
</p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Date</th>
        <th>Quantity</th>
        <th>Emission CO2 (kg)</th>
        <th>Emission Source</th>
        <th>Factor (Fuel)</th>
        <th>Unit of measure</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateFormatted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalculatedCo2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>