@model EkoTrack.Models.ActivityLog

@{
    ViewData["Title"] = "Create";
}

<h1>Add an entry</h1>

<h4>New activity</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Date of activity</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EmissionSourceId" class="control-label">Emission source</label>
                <select asp-for="EmissionSourceId" class="form-control" asp-items="ViewBag.EmissionSourceId">
                    <option value="">-- Choose source --</option>
                </select>
                <span asp-validation-for="EmissionSourceId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EmissionFactorId" class="control-label">Type of fuel/factor</label>
                <select asp-for="EmissionFactorId" class="form-control" asp-items="ViewBag.EmissionFactorId">
                    <option value="">-- Choose factor --</option>
                </select>
                <span asp-validation-for="EmissionFactorId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label">Usage</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}