@model EkoTrack.DTOs.ActivityLogDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Activity deletion</h1>

<h3>Are you sure you want to delete this entry?</h3>
<div>
    <h4>Activity log</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DateFormatted)
        </dd>

        <dt class="col-sm-3">Source</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SourceName)
        </dd>

        <dt class="col-sm-3">Factor</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FactorName)
        </dd>

        <dt class="col-sm-3">Quantity [@Model.Unit]</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-3">Calculated CO2</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CalculatedCo2)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </form>
</div>