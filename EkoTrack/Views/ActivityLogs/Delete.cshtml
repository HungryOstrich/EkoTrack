@model EkoTrack.DTOs.ActivityLogDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć ten wpis?</h3>
<div>
    <h4>Dziennik Aktywności</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Data</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DateFormatted)
        </dd>

        <dt class="col-sm-3">Źródło</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SourceName)
        </dd>

        <dt class="col-sm-3">Czynnik</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FactorName)
        </dd>

        <dt class="col-sm-3">Ilość [@Model.Unit]</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-3">Wyliczone CO2</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CalculatedCo2)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    </form>
</div>